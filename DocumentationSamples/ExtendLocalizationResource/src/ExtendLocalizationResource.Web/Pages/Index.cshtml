@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ExtendLocalizationResource.Localization
@using Volo.Abp.Localization
@using Volo.Abp.Timing.Localization.Resources.AbpTiming
@using Volo.Abp.Users
@model ExtendLocalizationResource.Web.Pages.IndexModel
@inject IHtmlLocalizer<ExtendLocalizationResourceResource> L
@inject IHtmlLocalizer<AbpTimingResource> AbpTimingResource
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style-bundle>
        <abp-style src="/Pages/Index.css" />
    </abp-style-bundle>
}
@section scripts {
    <abp-script-bundle>
        <abp-script src="/Pages/Index.js" />
    </abp-script-bundle>
}
<div class="jumbotron text-center">
    <h1>@L["Welcome"]</h1>
    <div class="row">
        <div class="col-md-12 mx-auto">
            <p>@AbpTimingResource["DisplayName:Abp.Timing.Timezone"]</p>
            @using(CultureHelper.Use("ru"))
            {
                <p>@AbpTimingResource["DisplayName:Abp.Timing.Timezone"]</p>
            }
            <hr class="my-4"/>
        </div>

    </div>
    <a href="https://abp.io?ref=tmpl" target="_blank" class="btn btn-primary px-4">abp.io</a>
    @if (!CurrentUser.IsAuthenticated)
    {
        <a abp-button="Primary" href="~/Account/Login" class="px-4"><i class="fa fa-sign-in"></i> @L["Login"]</a>
    }
</div>
